{
  "name": "baby-foot-tournament",
  "version": "1.0.0",
  "description": "Application de gestion de tournois de baby-foot avec Nuxt 3, Prisma et SQLite",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nuxt dev",
    "build": "nuxt build",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "db:reset": "prisma migrate reset --force --skip-seed",
    "db:clean": "prisma migrate reset --force --skip-seed"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "jsonwebtoken": "^9.0.3",
    "nuxt": "latest",
    "prisma": "^5.22.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@nuxt/test-utils": "^3.21.0",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@playwright/test": "^1.57.0",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/supertest": "^6.0.3",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.23",
    "playwright-core": "^1.57.0",
    "postcss": "^8.5.6",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.4.19",
    "vitest": "^3.2.4"
  }
}
